// Write the program to get the character at the given index.

import java.util.Scanner;
class GetIndex {
    public static void main(String [] args) {
       //get input from the user 
       
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the string : ");
        String s = sc.nextLine();
        
       //find length of string
       
        int l = s.length();
        
        //print original string
        
        System.out.println("Original string : "+s);
        
        //print length of string
        
        System.out.println("length of string : "+l);
        
        //find and print all the character present at the particular index of a string
        
        for(int i=0;i<l;i++){
            System.out.println("Character present at index "+i+" : "+s.charAt(i));
        }
    }
}
